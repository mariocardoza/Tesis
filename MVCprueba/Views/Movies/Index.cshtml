@model IEnumerable<MVCprueba.Models.Movie>

@{
    ViewBag.Title = "Listado de películas";
}

<h2>Listado de películas</h2>

<p>
    @Html.ActionLink("Registrar nuevo", "Create", null, new { @class = "btn btn-primary" })
    @using (Html.BeginForm())
    {
    <div class="input-group col-md-10">
        Género: @Html.DropDownList("movieGenre", (SelectList)ViewBag.movieGenre, "Todos", new { @class = "form-control" })
        Título: @Html.TextBox("SearchString", null, new { @class = "form-control" })
        <input type="submit" class="btn btn-primary" value="Buscar" />
    </div>
}
  </p>  <br>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayName("Título")
            </th>
            <th>
                @Html.DisplayName("Fecha de lanzamiento")
            </th>
            <th>
                @Html.DisplayName("Género")
            </th>
            <th>
                @Html.DisplayName("Precio")
            </th>
            <th>
                @Html.DisplayName("Clasificación")
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReleaseDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rating)
                </td>
                <td>
                    @Html.ActionLink(" ", "Edit", new { id = item.ID }, new { @class = "btn btn-warning glyphicon glyphicon-edit" }) |
                    @Html.ActionLink(" ", "Details", new { id = item.ID }, new { @class = "btn btn-default glyphicon glyphicon-th-list" }) |
                    @Html.ActionLink(" ", "Delete", new { id = item.ID }, new { @class = "btn btn-danger glyphicon glyphicon-remove" })
                </td>
            </tr>
        }

    </table>
